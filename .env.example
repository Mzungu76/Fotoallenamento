# Database connection. Use DATABASE_PROVIDER="postgresql" for production on Vercel.
DATABASE_PROVIDER="postgresql"
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE"

# NextAuth configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret"

# Resend API configuration for sending emails (magic links, reports)
RESEND_API_KEY="your-resend-api-key"
RESEND_FROM="no-reply@example.com"

# Vercel Blob token for uploading meal photos
BLOB_READ_WRITE_TOKEN=""

# Cron jobs will call these endpoints automatically when deployed on Vercel.
